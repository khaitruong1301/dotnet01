<div class="container">
    <h3>Product List</h3>
    <div class="row">
        @foreach (ProductCarVM prod in LstProduct)
        {
            <div class="col-3">
                <ProductItem eventAddToCart="eventAddToCart" prodProp="prod" eventClickDetail="eventClickDetail"></ProductItem>
            </div>
        }
    </div>
</div>
@code {
    [Parameter]
    public List<ProductCarVM> LstProduct { get; set; } = new List<ProductCarVM>();
    [Parameter]
    public EventCallback<ProductCarVM> eventClickDetail {get;set;}
    [Parameter]
    public EventCallback<ProductCarVM> eventAddToCart{get;set;}


}